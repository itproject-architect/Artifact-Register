<% include partials/header %>

<section class="loginpage">


  <div class="container">
      <div class="row">
        <div class="col-12 heading mt-5">
          <h3>Invite Family</h3>
        </div>

        <form class="col-12" action="/send" method="post">
          <div class="form-group col-12">
            <input
              type="text"
              class="form-control col-12"
              name="name"
              placeholder="Name"
              required
            />
          </div>
          <div class="form-group col-12">
            <input
              type="email"
              class="form-control"
              name="username"
              placeholder="@Email"
              required
            />
          </div>
          <div class="text-center col-12">
            <button type="submit" class="btn btn-primary btnLoader" value="Login!">Send Invitation</button>
          </div>
        </form>
      </div>
  </div>
</section>
<% include partials/footer %>
