<!--BLOGPOST SHOW-->

<% include ../partials/header %>

<section class="showblogpostpage">
    <div class="container">
        <div class="row">
            <div class="mt-5 heading col-12 text-center">
                <h3 class="d-inline-block"><%=artipost.name%></h3>

                <hr>

                <% if(currentUser && artipost.author.id.equals(currentUser._id)){ %>
                    <div class="dropdown text-right">
                        <button class="btn bmd-btn-icon dropdown-toggle" type="button" id="ex1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-left" aria-labelledby="ex1">
                            <a id="edit-link" href="/artifactposts/<%= artipost._id%>/edit"><button class="dropdown-item" type="button" >Edit</button></a>
                            <form id="delete-form" action ="/artifactposts/<%= artipost._id %>?_method=DELETE" method="POST">
                                <input type='submit' value='Delete' name='delete' form="delete_form" class="dropdown-item" >
                            </form>


                        </div>
                    </div>
                <% } %>
            </div>

        </div>



        <div id="carouselExampleIndicators" class="img carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <% for (index in artipost.image) { %>
                <li data-target="#carouselExampleIndicators" data-slide-to= <%index%> class="<% if (index == 0) {%><%= "active" %><% } %>""></li>
                <%}%>
            </ol>
            <div class="carousel-inner" role="listbox" style=" width:100%; height: 1000px !important;">
                <% for (index in artipost.image) { %>
                    <div class="carousel-item <% if (index == 0) {%><%= "active" %><% } %>">
                        <img class="d-block w-100" src ="<%=artipost.image[index]%>" alt="First slide">
                    </div>
                <%}%>

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>





        <div class="row">
            <div class="col-12 text-center">
                <p><%- artipost.description %></p>
            </div>
        </div>



        <form
                class="newcommentform"
                action="/artifactposts/<%= artipost._id %>/comments"
                method="POST"
        >

            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <textarea
                    rows="5"
                    class="form-control"
                    type="text"
                    name="comment[text]"

            ></textarea>
                </div>
            </div>
            <div class="row newcommentbuttons text-center">
                <div class="col-12">
                    <button class="black-btn btn btn-raised btn-success">Submit</button>
                    <a
                            class="black-btn btn btn-raised btn-danger"
                            href="/artifactposts"
                    >Back</a
                    >
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <% artipost.comments.forEach(function(comment){ %>
                <hr />
                <p><%= comment.text %></p>
                <% if(JSON.stringify(comment.author) === '{}') { %>
                    <span class="commentbuttons"
                    >Posted by <strong> Guest</strong> on:
          <strong><%= comment.created.toDateString() %></strong></span
                    >

                <% } else{ %>
                    <span class="commentbuttons"
                    >Posted by <strong> <%= comment.author.username %></strong> on:
          <strong><%= comment.created.toDateString() %></strong></span
                    >
                <% } %>
        </div>
    </div>
    <div class="row">
        <div
                class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 commentbuttons"
        >
            <% if(currentUser && comment.author.id == (currentUser._id)){ %>
                <a
                        class="btn btn-xs btn-warning"
                        href="/artifactposts/<%= artipost._id %>/comments/<%= comment._id %>/edit"
                >Edit</a
                >
                <form
                        class="delete-form"
                        action="/artifactposts/<%= artipost._id %>/comments/<%= comment._id %>?_method=DELETE"
                        method="POST"
                >
                    <button role="button" class="btn btn-xs btn-danger" value="Delete">
                        Delete
                    </button>
                </form>
            <% } %> <% }) %>
        </div>
    </div>
    </div>
</section>

<% include ../partials/footer %>