<% include partials/header %>

<section class="profilepage">
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-md-3 float-left mt-5">
                <a id="edit-button"class="btn btn-raised btn-primary btn-block btn-capitalize" href="profile/edit">Edit Profile</a>
                <a id="edit-button" class="btn btn-raised btn-primary btn-block btn-capitalize" href="#">Manage Artifacts</a>
            </div>

            <div class="col-md-9 float-right mt-5">
                <div class="container mb-5">
                    <header style="height: auto">
                        <a href="/profile/edit">
                            <% if (user.photo) { %>
                                <img class="img-small circle-image mb-3"
                                     src="<%= user.photo %>" alt="<%= user.username %>" href="/profile/edit"/>
                            <% } else { %>
                                <button class="author-icon mb-3" data-toggle="tooltip"
                                        title="<%= user.name %>"><%= user.name.substring(0, 1) %></button>
                            <% } %>
                        </a>
                    </header>
                    <h2 class="text-center text-capitalize"><%= user.name %></h2>
                </div>

                <div class="container">
                <div class="panel panel-default">
                    <div id="panel-head" class="panel-heading text-center heading">
                         <h3 class="panel-title">Artifacts</h3>
                </div>

                    <div class="panel-body">
                        <table class="table table-striped table-hover">
                            <tr>
                                <th style="background-color:#f9bea6;">Name</th>
                                <th style="background-color:#f9bea67a;">Year</th>
                                <th style="background-color:#f9e9df;";>Location</th>
                            </tr>
                            <% artifacts.forEach(function (art) { %>

                                <tr>
                                    <th><a href="artifactposts/<%= art._id%>"><%= art.name%></a></th>
                                    <th><%=  art.year%></th>
                                    <th><%= art.location%></th>
                                </tr>


                            <% }) %>
                        </table>
                    </div>
                </div>

                </div>
            </div>


        </div>
    </div>
    </div>
</section>


<% include partials/footer %>