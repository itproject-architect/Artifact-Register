<% include partials/header %>

<section class="registerpage">
  <div class="container">
    <div class="heading mt-5">
      <h3>Sign Up</h3>
    </div>
    <form action="/register" method="post">
      <div class="form-group  form-size-res">
        <label class="bmd-label-floating" for="name">Name</label>
        <input
          type="text"
          class="form-control"
          name="name"
          placeholder="name"
          value="<%= userinvite.name %>"
          required

        />
      </div>
      <div class="form-group form-size-res col-12">
        <label class="bmd-label-floating" for="username">Username</label>
        <input
          type="text"
          class="form-control"
          name="username"
          value="<%=userinvite.username%>"
          required
        />
      </div>

      <div class="form-group form-size-res col-12">
        <label class="bmd-label-static" for="password">Password</label>
        <input
          type="password"
          class="form-control"
          name="password"
          required

        />
      </div>
      <div class="form-size-res">
        <button type="submit" class="btn btn-primary col-lg-12 mt-3">Register</button>
      </div>
    </form>
  </div>
</section>

<% include partials/footer %>
