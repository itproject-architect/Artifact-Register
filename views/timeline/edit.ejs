<!--BLOGPOST EDIT-->
<% include ../partials/header %>

<section class="editblogpostpage">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h1>Edit post: <%= artipost.name %></h1>
            </div>
        </div>
        <form action="/artifactposts/<%= artipost._id %>?_method=PUT" method="POST">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <input class="form-control" type="text" name="artipost[name]" value="<%= artipost.name %>">
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <input class="form-control" type="number" name="artipost[year]", min="1850" max="2019" step="1" value="<%= artipost.year %>" />
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <input class="form-control" type="text" name="artipost[image]" value="<%= artipost.image %>">
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <textarea  rows="10" col="50" class="form-control" type="text" name="artipost[description]"><%= artipost.description %></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 editblogpostbuttons">
                    <button class="btn btn-md btn-primary">Submit!</button>
                    <a class="btn btn-md btn-outline-primary" href="/artifactposts/<%=artipost._id%>" campground>Back</a>
                </div>
            </div>
        </form>
    </div>
</section>
<% include ../partials/footer %>