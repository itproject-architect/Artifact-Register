<% include ../partials/header %>
<div class="timelinepage">
  <div class="container">
    <div class="row mb-2">
      <div class="col-12 heading text-center mt-5 w3-animate-opacity w3-text-white">
        <h3>Artifact TimeLine</h3>

      </div>
    </div>
  </div>
