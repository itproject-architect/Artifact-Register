<!--BLOGPOST INDEX-->
<% include ../partials/header %>
<header style="margin-top: -4%"> <!-- this might not be a good way to remove blank space above header-->
  <div class="display-lower-middle">
    <div class="w3-display-container w3-animate-opacity w3-text-white">
        <h1 class="w3-jumbo w3-animate-top">Artifact Time Line</h1>
        <hr class="w3-border-grey" style="margin:auto;width:40%">
        <p class="w3-center mt-3">Click on image to show more</p>
    </div>
  </div>

</header>


<section class="blogpostimelinepage">
  <div class="blogpostindexintro greybackground">

  </div>
  <div class="container">
    <section class="cd-timeline js-cd-timeline">
      <div class="cd-timeline__container">
        <% artipost.forEach(function(artipost){ %>

              <div class="cd-timeline__block js-cd-block">
                <div class="cd-timeline__img cd-timeline__img--picture js-cd-img">
                  <!--<img src="img/cd-icon-picture.svg" alt="Picture">-->
                </div> <!-- cd-timeline__img -->

                <div class="cd-timeline__content js-cd-content">
                  <p style="font-size: medium;line-height: 1px;" class="date-align"><%=artipost.year%></p>
                  <div class="image-frame">
                    <a href="/artifactposts/<%=artipost._id %>"
                    ><img class="img-fluid image-border zoom image-center" src="<%= artipost.image[0]%>"
                      /></a>
                  </div>


                    <!--<p><%- artipost.description.substring(0, 200) %>...</p>-->
                  <!--<span class="cd-timeline__date">Jan 14</span>-->
                  <div class="heading cd-timeline__date">
                    <h3><%=artipost.name%></h3>
                    <!--<p style="font-size: medium; text-align: center"><%- artipost.description.substring(0, 200) %></p>-->
                    <!--<div class="cd-timeline__read-more" style="cd-timeline__date">
                      <a class="btn btn-outline-primary" href="/artifactposts/<%=artipost._id %>"
                      >Read More</a>
                    </div>-->
                  </div>

                </div>
              </div>

        <% }); %>
      </div>
    </section> <!-- cd-timeline -->

  </div>
</section>

<% include ../partials/footer %>
