<% include partials/header %>

<section class="profilepage">
    <div class="container">
        <div class="row">
            <div class="container">
                <h3 class="heading">:: Edit your profile ::</h3>
            </div>
            <div class="container profile-container">
                <div class="row">
                    <div class="col-3">
                        <h3>Photo</h3>
                    </div>
                    <div class="col-8">
                        <button class="author-icon mb-3" data-toggle="tooltip"
                                title="<%= user.name %>"><%= user.name.substring(0, 1) %></button>
                    </div>
                    <div class="col-1">
                        <a class="btn" href="#upload_photo">
                            <i class="fas fa-pen"></i>
                        </a>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-3">
                        <h3>Name</h3>
                    </div>
                    <div class="col-8">
                        <%= user.name %>
                    </div>
                    <div class="col-1">
                        <a class="btn" href="#change_name" data-toggle="collapse" data-target="#change_name">
                            <i class="fas fa-pen"></i>
                        </a>
                    </div>
                </div>
                <div id="change_name" class="container profile-container collapse">
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-9">
                            <form action="/profile/edit" method="POST">
                                <input type="text" class="form-control mb-3" name="name"
                                       placeholder="Enter your new name..." required>
                                <button type="submit" class="btn btn-outline-primary">Done!</button>
                            </form>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row profile-row">
                    <div class="col-3">
                        <h3>Password</h3>
                    </div>
                    <div class="col-8">
                        <%= typeof user.password %>
                    </div>
                    <div class="col-1">
                        <a class="btn" href="#change_password">
                            <i class="fas fa-pen"></i>
                        </a>
                    </div>
            </div>
        </div>
    </div>
</section>

<% include partials/footer %>